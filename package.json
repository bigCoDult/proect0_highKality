{
  "scripts": {
    "start": "run-p sass:watch tailwind:watch server",
    "sass": "sass src/scss:src/style",
    "sass:watch": "npm run sass -- --watch",
    "tailwind": "tailwind -i ./src/style/input.css -o ./src/style/output.css",
    "tailwind:watch": "npm run tailwind -- --watch",
    "server": "live-server src",
    "clear": "rimraf src/style",
    "build": "postcss src/style/index.css -o src/style/main.css"
  },
  "dependencies": {
    "cssnano": "^6.0.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-combine-media-query": "^1.0.1",
    "rimraf": "^5.0.1",
    "sass": "^1.63.5",
    "autoprefixer": "^10.4.14",
    "postcss-import": "^14.1.0",
    "postcss-nesting": "^10.2.0",
    "postcss-preset-env": "^7.8.3",
    "tailwindcss": "^3.3.2"
  }
}